{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "coverageDirectory": "coverage",
  "collectCoverageFrom": ["src/**/*.ts"],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1"
  },  
  "moduleDirectories": ["node_modules", "src"],
  "resetMocks": true,
  "restoreMocks": true
}
